<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="XmlExtensions.UseSetting">
        <modId>Harkon.GunNut.KS23Shotgun</modId>
        <key>KS23M_Camo</key>
        <defaultValue>HRK_KS23M_Black</defaultValue>
        <apply>
            <Operation Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName="HRK_KS23M"]/graphicData/texPath</xpath>
                <value>
                    <texPath>Things/Weapons/HRK_KS23M/{KS23M_Camo}</texPath>
                </value>
            </Operation>
            <Operation Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName="HRK_KS23M"]/uiIconPath</xpath>
                <value>
                    <uiIconPath>UI/Weapons/HRK_KS23M/{KS23M_Camo}</uiIconPath>
                </value>
            </Operation>
        </apply>
    </Operation>

    <Operation Class="XmlExtensions.UseSetting">
