<?xml version="1.0" encoding="UTF-8"?>

<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Muzzle Flash</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="HRK_KS23M"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(1.2,1.5)</drawSize>
							<offsets>
								<li>(0.6,0.05)</li>
							</offsets>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="HRK_KS23L"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(1.2,1.5)</drawSize>
							<offsets>
								<li>(0.7,0.05)</li>
							</offsets>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="HRK_KS23Charged"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(1.2,1.5)</drawSize>
							<offsets>
								<li>(0.7,0.05)</li>
							</offsets>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>